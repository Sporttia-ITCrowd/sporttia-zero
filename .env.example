# =============================================================================
# Sporttia ZERO - Environment Variables for Docker Deployment
# =============================================================================
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# Database (PostgreSQL) - Sporttia ZERO conversations and tracking
DATABASE_URL=postgresql://user:password@host:5432/sporttia_zero

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# Sporttia API (for sports list and login)
# Pre-production: https://preapi.sporttia.com/v7
# Production: https://api.sporttia.com/v7
SPORTTIA_API_URL=https://api.sporttia.com/v7

# Sporttia MySQL Database (for ZeroService sports center creation)
SPORTTIA_DB_HOST=your-mysql-host
SPORTTIA_DB_PORT=3306
SPORTTIA_DB_USER=your-db-user
SPORTTIA_DB_PASSWORD=your-db-password
SPORTTIA_DB_NAME=sporttia

# Resend (Email)
RESEND_API_KEY=re_your-resend-api-key
EMAIL_FROM=Sporttia ZERO <zero@sporttia.com>

# CORS - Set to your domain in production
CORS_ORIGIN=https://your-domain.com
