# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Database (PostgreSQL) - Local database for Sporttia ZERO conversations and tracking
DATABASE_URL=postgresql://user:password@localhost:5432/sporttia_zero

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# Sporttia API (for sports list and login)
# Pre-production: https://preapi.sporttia.com/v7
# Production: https://api.sporttia.com/v7
SPORTTIA_API_URL=https://preapi.sporttia.com/v7

# Sporttia MySQL Database (for ZeroService sports center creation)
SPORTTIA_DB_HOST=127.0.0.1
SPORTTIA_DB_PORT=3311
SPORTTIA_DB_USER=your-db-user
SPORTTIA_DB_PASSWORD=your-db-password
SPORTTIA_DB_NAME=sporttia_pre

# Resend (Email)
RESEND_API_KEY=re_your-resend-api-key
EMAIL_FROM=Sporttia ZERO <zero@sporttia.com>

# Google Places API (for city validation and lookup)
GOOGLE_PLACES_API_KEY=your-google-places-api-key

# CORS
CORS_ORIGIN=http://localhost:5173
