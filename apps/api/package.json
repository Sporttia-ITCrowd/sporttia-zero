{
  "name": "@sporttia-zero/api",
  "version": "0.1.5",
  "private": true,
  "type": "module",
  "description": "Express.js API server for Sporttia ZERO",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.js --format=esm --packages=external",
    "start": "node dist/index.js",
    "db:migrate": "tsx src/db/migrate.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@sporttia-zero/shared": "*",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.18.0",
    "helmet": "^7.1.0",
    "kysely": "^0.27.0",
    "mysql2": "^3.16.1",
    "openai": "^4.104.0",
    "pg": "^8.11.0",
    "pino": "^8.18.0",
    "pino-http": "^9.0.0",
    "resend": "^3.2.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "esbuild": "^0.20.0",
    "@types/express": "^4.17.21",
    "@types/pg": "^8.11.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.8",
    "pino-pretty": "^13.1.3",
    "supertest": "^7.2.2",
    "tsx": "^4.7.0",
    "vitest": "^1.3.0"
  }
}
